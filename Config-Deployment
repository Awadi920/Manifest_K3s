---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: config-server
  namespace: default
  labels:
    app: config-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: config-server
  template:
    metadata:
      labels:
        app: config-server
    spec:
      containers:
      - name: config-server
        image: docker-repo:8082/config-service:latest
        ports:
        - containerPort: ${CONFIG_SERVER_PORT}
        env:
        - name: SPRING_APPLICATION_NAME
          value: "${CONFIG_APPLICATION_NAME}"
        - name: SERVER_PORT
          value: "${CONFIG_SERVER_PORT}"
        - name: SPRING_CLOUD_DISCOVERY_ENABLED
          value: "${CONFIG_SPRING_CLOUD_DISCOVERY_ENABLED}"
        - name: EUREKA_INSTANCE_PREFER_IP_ADDRESS
          value: "${CONFIG_EUREKA_INSTANCE_PREFER_IP_ADDRESS}"
        - name: EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE
          value: "${CONFIG_CLIENT_SERVICE_URL_DEFAULTZONE}"
        - name: MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE
          value: "${CONFIG_MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE}"
        - name: SPRING_CLOUD_CONFIG_SERVER_GIT_URI
          value: "${CONFIG_SPRING_CLOUD_CONFIG_SERVER_GIT_URI}"
        - name: LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD_CONFIG_SERVER_ENVIRONMENT
          value: "${CONFIG_LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD_CONFIG_SERVER_ENVIRONMENT}"
        - name: LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD_CONFIG
          value: "${CONFIG_LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD_CONFIG}"
        - name: LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD_CONFIG_SERVER_ENVIRONMENT_MULTIPLEJGITENVIRONMENTREPOSITORY
          value: "${CONFIG_LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD_CONFIG_SERVER_ENVIRONMENT_MULTIPLEJGITENVIRONMENTREPOSITORY}"
        - name: SPRING_CLOUD_CONFIG_SERVER_GIT_USERNAME
          value: "${CONFIG_SPRING_CLOUD_CONFIG_SERVER_GIT_USERNAME}"
        - name: SPRING_CLOUD_CONFIG_SERVER_GIT_PASSWORD
          value: "${CONFIG_SPRING_CLOUD_CONFIG_SERVER_GIT_PASSWORD}"
        livenessProbe:
          httpGet:
            path: /actuator/health
            port: ${CONFIG_SERVER_PORT}
          initialDelaySeconds: 30
          periodSeconds: 10
