---
apiVersion: v1
kind: Service
metadata:
  name: config-server
  namespace: default
spec:
  selector:
    app: config-server
  ports:
  - protocol: TCP
    port: ${CONFIG_SERVER_PORT}
    targetPort: ${CONFIG_SERVER_PORT}
  type: ClusterIP
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: eureka-server
  namespace: default
  labels:
    app: eureka-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: eureka-server
  template:
    metadata:
      labels:
        app: eureka-server
    spec:
      containers:
      - name: eureka-server
        image: docker-repo:8082/discovery-service:latest
        ports:
        - containerPort: ${DISCOVERY_SERVER_PORT}
        env:
        - name: SPRING_APPLICATION_NAME
          value: "${DISCOVERY_APPLICATION_NAME}"
        - name: SERVER_PORT
          value: "${DISCOVERY_SERVER_PORT}"
        - name: EUREKA_CLIENT_FETCH_REGISTRY
          value: "${DISCOVERY_EUREKA_CLIENT_FETCH_REGISTRY}"
        - name: EUREKA_CLIENT_REGISTER_WITH_EUREKA
          value: "${DISCOVERY_EUREKA_CLIENT_REGISTER_WITH_EUREKA}"
        livenessProbe:
          httpGet:
            path: /actuator/health
            port: ${DISCOVERY_SERVER_PORT}
          initialDelaySeconds: 30
          periodSeconds: 10
